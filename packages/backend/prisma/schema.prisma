generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model user {
  userId       Int           @id @default(autoincrement())
  userCode     String        @unique
  hoTen        String?
  soDienThoai  String?
  email        String?
  phuhuynh     phuhuynh?
  quanlyxebuyt quanlyxebuyt?
  taixe        taixe?
}

model quanlyxebuyt {
  quanLyId Int  @id @default(autoincrement())
  userId   Int  @unique
  user     user @relation(fields: [userId], references: [userId], onDelete: Cascade)
}

model taixe {
  taiXeId   Int         @id @default(autoincrement())
  userId    Int?        @unique
  hoTen     String
  trangThai String?
  lichtrinh lichtrinh[]
  user      user?       @relation(fields: [userId], references: [userId])
}

model phuhuynh {
  phuHuynhId Int        @id @default(autoincrement())
  userId     Int        @unique
  hocsinh    hocsinh[]
  user       user       @relation(fields: [userId], references: [userId], onDelete: Cascade)
  thongbao   thongbao[]
}

model hocsinh {
  hocSinhId  Int       @id @default(autoincrement())
  maHS       String    @unique
  hoTen      String?
  lop        String?
  diemDon    String?
  diemTra    String?
  phuHuynhId Int?
  phuhuynh   phuhuynh? @relation(fields: [phuHuynhId], references: [phuHuynhId])

  @@index([phuHuynhId], map: "hocsinh_phuHuynhId_fkey")
}

model xebuyt {
  xeBuytId  Int         @id @default(autoincrement())
  maXe      String      @unique
  bienSo    String?
  sucChua   Int?
  trangThai String?
  lichtrinh lichtrinh[]
  vitri     vitri[]
}

model vitri {
  viTriId  Int       @id @default(autoincrement())
  xeBuytId Int
  vido     Float?
  kinhdo   Float?
  thoiGian DateTime?
  xebuyt   xebuyt    @relation(fields: [xeBuytId], references: [xeBuytId], onDelete: Cascade)

  @@index([xeBuytId], map: "vitri_xeBuytId_fkey")
}

model diemdung {
  diemDungId          Int                   @id @default(autoincrement())
  tenDiemDung         String
  diaChi              String?
  tuyenduong_diemdung tuyenduong_diemdung[]
}

model tuyenduong {
  tuyenDuongId        Int                   @id @default(autoincrement())
  maTuyen             String                @unique
  tenTuyen            String?
  lichtrinh           lichtrinh[]
  tuyenduong_diemdung tuyenduong_diemdung[]
}

model tuyenduong_diemdung {
  tuyenDuongId Int
  diemDungId   Int
  thuTu        Int
  diemdung     diemdung   @relation(fields: [diemDungId], references: [diemDungId], onDelete: Cascade)
  tuyenduong   tuyenduong @relation(fields: [tuyenDuongId], references: [tuyenDuongId], onDelete: Cascade)

  @@id([tuyenDuongId, diemDungId])
  @@index([diemDungId], map: "tuyenduong_diemdung_diemDungId_fkey")
}

model lichtrinh {
  lichTrinhId  Int         @id @default(autoincrement())
  maLich       String      @unique
  ngay         DateTime?   @db.Date
  gioKhoiHanh  DateTime?   @db.Time(0)
  gioKetThuc   DateTime?   @db.Time(0)
  tuyenDuongId Int?
  taiXeId      Int?
  xeBuytId     Int?
  taixe        taixe?      @relation(fields: [taiXeId], references: [taiXeId])
  tuyenduong   tuyenduong? @relation(fields: [tuyenDuongId], references: [tuyenDuongId])
  xebuyt       xebuyt?     @relation(fields: [xeBuytId], references: [xeBuytId])

  @@index([taiXeId], map: "lichtrinh_taiXeId_fkey")
  @@index([tuyenDuongId], map: "lichtrinh_tuyenDuongId_fkey")
  @@index([xeBuytId], map: "lichtrinh_xeBuytId_fkey")
}

model thongbao {
  thongBaoId  Int       @id @default(autoincrement())
  phuHuynhId  Int?
  noiDung     String?
  loai        String?
  thoiGianGui DateTime?
  phuhuynh    phuhuynh? @relation(fields: [phuHuynhId], references: [phuHuynhId], onDelete: Cascade)

  @@index([phuHuynhId], map: "thongbao_phuHuynhId_fkey")
}
